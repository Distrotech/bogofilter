#! /bin/sh

set -e

# Note:  When run via "make check", test output files are automatically deleted.
#	 When run from the command line, outputs files are left in directory
#	 split.YYYYMMDD.  This is useful when something is different.
#
#	 ./inputs  - test inputs
#	 ./outputs - known correct outputs
#
#	 split.YYYYMMDD:
#		tests   - directory containing individual output files

: ${srcdir=.}
relpath="`pwd`/../.."
NODB=1 . ${srcdir}/../t.frame

BOGOLEXER="$VAL ${relpath}/bogolexer"
BOGOFILTER="$VAL ${relpath}/bogofilter"
SYSTEST="${srcdir}"
BOGOFILTER_DIR="${TMPDIR}/tests"
export BOGOFILTER_DIR

verbose=0
if [ "$1" = "-v" ]; then
    verbose=1
fi

map_rc()
{
    (
	set +e
	eval "$@"
	a=$?
	[ $a -eq 0 ] && exit 0
	[ $a -eq 1 ] && exit 0
	exit $a
    )
}

$BOGOFILTER -f -s -C < ${srcdir}/inputs/spam.mbx
$BOGOFILTER -f -n -C < ${srcdir}/inputs/good.mbx

OUT="split.out"

files=`ls ${srcdir}/inputs/split.d/msg*`
for msg in $files ; do
    nam=`basename $msg`
    out="$TMPDIR/$nam"
    map_rc $BOGOLEXER -C -p -I $msg > $out.l
    map_rc $BOGOFILTER -vvv -f -C -I $msg > $out.f
    printf "%-20s %s\n" $nam `head -1 $out.f | sed s@spamicity=@@ | tr -d "," | awk '{print $4}'` >> ${TMPDIR}/$OUT
done

[ ! -z "$BF_SAVEDIR" ] && . ${srcdir}/../t.save

OUTPUTS=${SYSTEST}/outputs

if  [ $verbose -eq 0 ]; then
    cmp ${OUTPUTS}/$OUT ${TMPDIR}/$OUT
else
    [ `uname -s` = "Linux" ] && OPTS="-u -s --brief"
    diff $OPTS ${OUTPUTS}/$OUT ${TMPDIR}/$OUT
fi
