#! /bin/sh

set -e

# Note:  When run via "make check", test output files are automatically deleted.
#	 When run from the command line, outputs files are left in directory
#	 maildir.YYYYMMDD.  This is useful when something is different.
#
#	 ./inputs/spam.mbx & ./inputs/good.mbx  - test inputs
#	 ./outputs - known correct outputs
#
#	 maildir.YYYYMMDD:
#		tests   - directory containing individual output files

if [ "$1" = "save" ]; then
    if [ ! -d $2/$3 ] ; then
	mkdir $2/$3
	mkdir $2/$3/cur
	mkdir $2/$3/new
	mkdir $2/$3/tmp
    fi
    cat > $2/$3/cur/$FILENO
    exit
fi

NODB=1 . ${srcdir=.}/t.frame

OUT="${TMPDIR}/maildir.out"

CORRECT="${SYSTEST}/outputs/maildir.out"

( formail </dev/null >/dev/null 2>/dev/null ) || exit 77

for f in good spam ; do
    cat ${srcdir}/inputs/$f.mbx | formail -s $0 save $TMPDIR $f 
done

$BOGOFILTER -C -D -n -B $TMPDIR/good
$BOGOFILTER -C -D -s -B $TMPDIR/spam
wordlist=".MSG_COUNT Lotus Magazine Min Service connection more most set that unsubscribe"

$BOGOUTIL -w $TMPDIR/wordlist.$DB_EXT $wordlist >$OUT || rm -f $OUT

if  [ $verbose -eq 0 ]; then
    cmp $CORRECT $OUT
else
    diff $DIFF_BRIEF $CORRECT $OUT
fi
