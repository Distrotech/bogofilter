#! /bin/sh

set -e

# Note:  When run via "make check", test output files are automatically deleted.
#	 When run from the command line, outputs files are left in directory
#	 separate.YYYYMMDD.  This is useful when something is different.
#
#	Test options:
#	    "-W" - combined wordlist - spam and ham in wordlist.db
#	    "-WW" - separate wordlists - spamlist.db and wordlist.db

NODB=1 . ${srcdir=.}/t.frame

EXP="22 48"

WORDS="subj:Earn subj:Your subj:College"

# combined wordlists

rm -f $BOGOFILTER_DIR/????list.db

$BOGOFILTER -W -s < ${SYSTEST}/inputs/spam.mbx
$BOGOFILTER -W -n < ${SYSTEST}/inputs/good.mbx

OUT="$TMPDIR/combined.out"
for f in $BOGOFILTER_DIR/????list.db ; do
    basename $f >> $OUT
done
$BOGOUTIL -w $BOGOFILTER_DIR .MSG_COUNT $WORDS >> $OUT
echo Subject: Earn Your College Degree Online | $BOGOFILTER -uT -D -W >> $OUT
$BOGOUTIL -w $BOGOFILTER_DIR .MSG_COUNT $WORDS >> $OUT

COM=`$BOGOUTIL -W -w $BOGOFILTER_DIR .MSG_COUNT | tail -1 | $AWK '{printf "%s %s", $2, $3}'`

# separate wordlists

rm -f $BOGOFILTER_DIR/????list.db

$BOGOFILTER -WW -s < ${SYSTEST}/inputs/spam.mbx
$BOGOFILTER -WW -n < ${SYSTEST}/inputs/good.mbx

OUT="$TMPDIR/separate.out"
for f in $BOGOFILTER_DIR/????list.db ; do
    basename $f >> $OUT
done
$BOGOUTIL -w $BOGOFILTER_DIR .MSG_COUNT $WORDS >> $OUT
echo Subject: Earn Your College Degree Online | $BOGOFILTER -uT -D -WW >> $OUT
$BOGOUTIL -w $BOGOFILTER_DIR .MSG_COUNT $WORDS >> $OUT

SEP=`$BOGOUTIL -WW -w $BOGOFILTER_DIR .MSG_COUNT | tail -1 | $AWK '{printf "%s %s", $2, $3}'`

if [ "$COM" != "$EXP" ] ; then
    echo com: $COM, exp: $EXP
fi

if [ "$SEP" != "$EXP" ] ; then
    echo sep: $SEP, exp: $EXP
fi

if [ "$verbose" -gt 0 ] ; then
    echo com: $COM, sep: $SEP, exp: $EXP
fi

if [ "$SEP$COM" != "$EXP$EXP" ] ; then
    exit 1
fi

OUTPUTS=${SYSTEST}/outputs

for i in $TMPDIR/[cs]*.out ; do
    j=`basename $i`
    if  [ $verbose -eq 0 ]; then
	cmp $i $OUTPUTS/$j
    else
	set +e
	diff $DIFF_BRIEF $i $OUTPUTS/$j
    fi
done
