#!/bin/sh

#Test database maintenance using bogoutil's dump/load capabilities.
#    The building of wordlist.db also tests bogofilter's lexer

NODB=1 . ${srcdir=.}/t.frame

OUT="$TMPDIR/maint.out"

$BOGOFILTER -C -s < ${SYSTEST}/inputs/spam.mbx >> $TMPDIR/tmp
$BOGOFILTER -C -n < ${SYSTEST}/inputs/good.mbx >> $TMPDIR/tmp

CORRECT="$TMPDIR/result"

cat >> $CORRECT <<EOF
initial: 5063
count 0 -> 5063
count 1 -> 1753
count 2 -> 878
count 3 -> 571
EOF

printf "initial: %d\n" `$BOGOUTIL -d $BOGOFILTER_DIR/wordlist.db | wc -l` > $OUT

for cnt in 0 1 2 3 ; do
    $BOGOUTIL -c $cnt -m $BOGOFILTER_DIR/wordlist.db
    echo "count $cnt ->" `$BOGOUTIL -d $BOGOFILTER_DIR/wordlist.db | wc -l` >> $OUT
done

if  [ $verbose -eq 0 ]; then
    cmp $CORRECT $OUT
else
    diff $DIFF_BRIEF $CORRECT $OUT
fi
