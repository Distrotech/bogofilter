#! /bin/sh

. ${srcdir:=.}/t.frame

# make sure we can run with only BOGOFILTER_DIR or only HOME defined
echo | env -i HOME=$BOGOFILTER_DIR PATH=$PATH ${relpath}/bogofilter -n -C >/dev/null 2>&1
echo | env -i BOGOFILTER_DIR=$BOGOFILTER_DIR PATH=$PATH ${relpath}/bogofilter -p -e -C >/dev/null 2>&1

# check if BOGOFILTER_DIR overrides HOME
echo | env -i HOME=/nonexist BOGOFILTER_DIR=$BOGOFILTER_DIR PATH=$PATH ${relpath}/bogofilter -p -e -C >/dev/null 2>&1
