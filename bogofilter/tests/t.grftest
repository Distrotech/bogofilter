#!/bin/sh

. ${srcdir:=.}/t.frame

set -e

# Note:  This test DOES leave its output files on the hard drive.
#	 This makes it easier to see what has happened, which is
#		especially useful when something is different.
#
#        In directory t.systest.d are:
#
#		tests   - directory containing individual output files
#		grftest.out - comparison of directories:
#			      outputs - known correct outputs
#			      tests   - outputs of the individual tests

verbose=0
if [ "$1" = "-v" ]; then
    verbose=1
fi

[   -d ${TMPDIR} ] && rm -rf ${TMPDIR}
[ ! -d ${TMPDIR} ] && mkdir  ${TMPDIR}

# Graham config
cat /dev/null > ${TMPDIR}/cfg.g

# Robinson config
cat <<EOF > ${TMPDIR}/cfg.r
robx=0.415
min_dev=0.0
EOF

# Fisher config
cat <<EOF > ${TMPDIR}/cfg.f
robx=0.415
min_dev=0.1
ham_cutoff=0.0
EOF

# Fisher tristate
cat <<EOF > ${TMPDIR}/cfg.t
robx=0.415
min_dev=0.1
ham_cutoff=0.1
EOF

BOGOUTIL="../bogoutil"
BOGOFILTER="../bogofilter"
SYSTEST="${srcdir}/t.systest.d"

map_rc()
{
    (
	set +e
	eval "$@"
	a=$?
	[ $a -eq 0 ] && exit 0
	[ $a -eq 1 ] && exit 0
	echo exit $a
	exit $a
    )
}

run_test()
{
    id="$1"
    fil="$2"
    ver="$3"
    OUT="${TMPDIR}/tests/msg.$fil.$mth.$ver"
    OPTS="-$alg -t -$ver $CFG"
#echo $OPTS $OUT
    map_rc $BOGOFILTER $OPTS <${SYSTEST}/inputs/msg.$id.txt >${TMPDIR}/tests-$alg 
    sed s/,.version=.*// < ${TMPDIR}/tests-$alg > $OUT
#echo $BOGOFILTER $OPTS ${SYSTEST}/inputs/msg.$id.txt $OUT
}

[   -d ${TMPDIR}/tests ] && rm -f ${TMPDIR}/tests/*
[ ! -d ${TMPDIR}/tests ] && mkdir -p ${TMPDIR}/tests

for mth in g r f t ; do
    alg="$mth"
    [ "$alg" = "t" ] && alg=f
#   echo "***** a: $alg,  o: $mth *****"
    BOGOFILTER_DIR="${TMPDIR}/words.$mth"
    CFG="-c ${TMPDIR}/cfg.$mth"
    export BOGOFILTER_DIR
    [   -d $BOGOFILTER_DIR ] && rm -f $BOGOFILTER_DIR/*
    [ ! -d $BOGOFILTER_DIR ] && mkdir $BOGOFILTER_DIR
    $BOGOFILTER -$alg $CFG -s < ${SYSTEST}/inputs/spam.mbx
    $BOGOFILTER -$alg $CFG -n < ${SYSTEST}/inputs/good.mbx
#   ../bogoutil -w $BOGOFILTER_DIR .MSG_COUNT
    #
    # run tests for msg.[1-8].txt
    #
    for msg in ${SYSTEST}/inputs/msg.?.txt ; do
	tst=`echo $msg | sed s@${SYSTEST}/inputs/msg.@@ | sed s@.txt@@`
	args="$tst $tst v"
	run_test $args
    done

    rm -f ${TMPDIR}/tests-$alg
done

OUT="grftest.out"

printf "%2s     %-10s   %-10s   %-10s   %-10s\n" id graham robinson fisher tristate > ${TMPDIR}/tests/$OUT
for out in ${TMPDIR}/tests/msg.?.r.v ; do
    id=`echo $out | sed s@${TMPDIR}/tests/msg.@@ | sed s@.r.v@@`
    g=`cat ${TMPDIR}/tests/msg.$id.g.v | tr "NYU" "hSu"`
    r=`cat ${TMPDIR}/tests/msg.$id.r.v | tr "NYU" "hSu"`
    f=`cat ${TMPDIR}/tests/msg.$id.f.v | tr "NYU" "hSu"`
    t=`cat ${TMPDIR}/tests/msg.$id.t.v | tr "NYU" "hSu"`
    printf "%2s   %c %s   %c %s   %c %s   %c %s\n" $id $g $r $f $t >> ${TMPDIR}/tests/$OUT
done

OUTPUTS=${SYSTEST}/outputs
if  [ $verbose -eq 0 ]; then
    cmp ${OUTPUTS}/$OUT ${TMPDIR}/tests/$OUT
else
    diff -u -s --brief ${OUTPUTS}/$OUT ${TMPDIR}/tests/$OUT
fi
