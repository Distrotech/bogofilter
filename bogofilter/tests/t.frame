# testing framework for /bin/sh

set -e

while : ; do
  TMPDIR=./checks.$$.`date +"%Y%m%dT%H%M%S"`
  mkdir $TMPDIR && break
  sleep 1
done

trap "if test x$SUPPRESS_DELETE = x ; then rm -r -f core ${TMPDIR} ; else echo remove ${TMPDIR} and possibly core yourself ; fi" 0
BOGOFILTER_DIR=$TMPDIR
export BOGOFILTER_DIR
../bogofilter -n </dev/null
