#!/bin/sh

#Test database maintenance using bogoutil's dump/load capabilities.
#    The building of wordlist.db also tests bogofilter's lexer

NODB=1 . ${srcdir=.}/t.frame

OUT="$TMPDIR/maint.out"

$BOGOFILTER -C -s < ${SYSTEST}/inputs/spam.mbx
$BOGOFILTER -C -n < ${SYSTEST}/inputs/good.mbx

CORRECT="$TMPDIR/result"

cat >> $CORRECT <<EOF
initial: 5291
count 0 -> 5291
count 1 -> 1842
count 2 -> 938
count 3 -> 603
EOF

echo initial: `$BOGOUTIL -d $BOGOFILTER_DIR/wordlist.$DB_EXT | wc -l` > $OUT

for cnt in 0 1 2 3 ; do
    $BOGOUTIL -c $cnt -m $BOGOFILTER_DIR/wordlist.$DB_EXT
    echo "count $cnt ->" `$BOGOUTIL -d $BOGOFILTER_DIR/wordlist.$DB_EXT | wc -l` >> $OUT
done

if  [ $verbose -eq 0 ]; then
    cmp $CORRECT $OUT \
    ||  diff $DIFF_BRIEF $CORRECT $OUT
else
    diff $DIFF_BRIEF $CORRECT $OUT
fi
