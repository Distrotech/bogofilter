# $Id$

TESTSCRIPTS = t.bogodir t.lexer.mbx t.parsing t.degen t.regtest t.robx t.split t.valgrind t.systest t.grftest t.bulkmode t.MH t.maildir

TESTS=$(TESTSCRIPTS)

TESTS_ENVIRONMENT = RUN_FROM_MAKE=1 AWK=$(AWK) srcdir=$(srcdir) $(SHELL) $(VERBOSE)

EXTRA_DIST=$(TESTSCRIPTS) inputs outputs

distclean-local:
	rm -f {in,out}put-[1-9].db

dist-hook:
	cd $(distdir) && for i in inputs outputs ; do find $$i -name CVS -type d -prune -exec rm -r '{}' ';' ; done
	cd $(distdir) && for i in inputs outputs ; do find $$i -name '.#*' -type f -exec rm '{}' ';' ; done
