#! /bin/sh

. ${srcdir:=.}/t.frame

rm -f $TMPDIR/*
filelist="${srcdir}/inputs/????.mbx ${srcdir}/inputs/msg.?.txt"
cat $filelist >$TMPDIR/inp

CONFIG=$TMPDIR/test.cf

cat <<EOF > ${CONFIG}
robx=0.415
min_dev=1.0
replace_nonascii_characters=Y
EOF

grind() {
    $BOGOFILTER -n -d $TMPDIR -c $CONFIG <$TMPDIR/inp 2>> $TMPDIR/log && a=0 || a=$?
    echo >>$TMPDIR/res $a
}

explode() {
(   a=
    trap "kill 0" 1 2 3 15
    for i in 1 2 3 4 ; do
	grind &
        a="$a $!"
    done
    wait $a
)
}

# this test tortures the locking

trap "" 2
wtpid=
for i in 1 2 3 4 ; do
    explode &
    wtpid="$wtpid $!"
done
trap "kill 0" 2
wait $wtpid
trap - 2

[ -n "$BF_SAVEDIR" ] && . ${srcdir}/t.save

# check exit codes
ok=0
$AWK <$TMPDIR/res \
'{
    if ($0 ~ /^[0|1]$/) {
	ok=1;
     } else {
	fail=1;
    }
 }

 END {
    exit (1 + fail - ok)
 };'
